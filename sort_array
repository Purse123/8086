.MODEL SMALL
.STACK 64

.DATA
ARR 11H, 20H, 9H, 5H, 16H, 22H, 12H, 14H, 8H, 17H

.CODE
MAIN PROC FAR
MOV AX, @DATA
MOV DS, AX
LEA DI, ARR
MOV CX, 09H

NEXT: CALL PERFORM
LOOP NEXT

LEA DI, ARR
MOV DL, [ARR]
MOV AH, 02H
INT 21H

MOV AX, 4C00H
INT 21H
MAIN ENDP

PERFORM PROC NEAR
PUSH CX
COM: MOV CX, 00H
MOV AL, [DI + CX]
MOV BL, [DI + CX + 1]
CMP AL, BL
JNC SKIP
PUSH AL
PUSH BL
POP AL
POP BL
MOV [DI + CX], AL
MOV [DI + CX + 1], BL

SKIP: INC CX
CMP CX, 0AH
JNE COM
POP CX
RET
PERFORM ENDP

END MAIN
