.MODEL SMALL
.STACK 100H

.DATA
STRING LABEL BYTE
MAXLEN DB 60
ACTLEN DB ?
STR DB 60 DUP(?)

.CODE
MAIN PROC

MOV AX, @DATA
MOV DS, AX
MOV ES, AX
LEA DX, STRING

MOV AH, 0AH
INT 21H

CALL CLR_SCR
MOV CL, ACTLEN
MOV CH, 00H
MOV BX, 00H
MOV AL, 00H

NEXT: MOV DL, STR[BX]
CMP DL, ‘ ’
JE NEW
MOV AH, 02H
INT 21H
JMP SKIP

NEW: INC EL
CALL NEW_L

SKIP: INC BX
LOOP NEXT
MOV DL, EL
MOV AH, 02H
INT 21H
MOV AX, 4C00H
INT 21H
MAIN ENDP

CLR_SCR PROC NEAR
MOV AH, 0600H
MOV BH, 07H
MOV CX, 0000H
MOV DX, 184FH
INT 10H
RET
CLR_SCR ENDP

NEW_L PROC NEAR
MOV AH, 0601H
MOV BH, 07H
MOV CX, 0000H
MOV DX, 184FH
INT 10H
RET
NEW_L ENDP

END MAIN
